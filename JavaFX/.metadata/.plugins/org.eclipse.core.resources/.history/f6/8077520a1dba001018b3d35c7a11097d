package application;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.Node;
import javafx.stage.Stage;

public class MainController {
	
	@FXML
	void main(ActionEvent event) {
		try {
			Main.setRoot("Main");
		} catch (Exception e) {
			System.err.println("Main.fxml 파일이 없습니다.");
			e.printStackTrace();
		}
	}

	@FXML
	void login(ActionEvent event) {
		try {
			Main.setRoot("Login");
		} catch (Exception e) {
			System.err.println("Login.fxml 파일이 없습니다.");
			e.printStackTrace();
		}
	}
	
	@FXML
	void join(ActionEvent event) {
		try {
			Main.setRoot("Join");			
			Main.stage.sizeToScene();	// FXML 에 지정한 크기로 윈도우 크기 변경		
		} catch (Exception e) {
			System.err.println("Join.fxml 파일이 없습니다.");
			e.printStackTrace();
		}
	}
	
	@FXML
	void menu(ActionEvent event) {
		try {
			Main.setRoot("Menu");
		} catch (Exception e) {
			System.err.println("Menu.fxml 파일이 없습니다.");
			e.printStackTrace();
		}
	}
	
    @FXML
    void board(ActionEvent event) {
    	try {
			Main.setRoot("Board");
		} catch (Exception e) {
			System.err.println("Board.fxml 파일이 없습니다.");
			e.printStackTrace();
		}
    }
}
